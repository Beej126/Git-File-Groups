{
  "name": "git-file-groups",
  "version": "0.2.4",
  "description": "Group source control changed files in VSCode tree view",
  "publisher": "Beej",
  "repository": "https://github.com/beej126/Git-File-Groups",
  "main": "./out/extension.js",
  "npm.packageManager": "pnpm",
  "volta": {
    "node": "24.13.0",
    "pnpm": "10.28.2"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "activationEvents": [
    "onView:gitFileGroupsTreeView",
    "onCommand:git-file-groups.refreshGroup",
    "onCommand:git-file-groups.createGroup",
    "onCommand:git-file-groups.renameGroup",
    "onCommand:git-file-groups.commitGroup",
    "onCommand:git-file-groups.commitWithMessage",
    "onCommand:git-file-groups.openFile",
    "onCommand:git-file-groups.renameFile",
    "onCommand:git-file-groups.openDiff",
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:git-file-groups.copyRelativePath",
    "onCommand:git-file-groups.revealInExplorer"
  ],
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitFileGroupsTreeView",
          "name": "Git File Groups",
          "icon": "media/icon-view.svg"
        }
      ]
    },
    "//icons": "https://microsoft.github.io/vscode-codicons/dist/codicon.html",
    "commands": [
      {
        "command": "git-file-groups.refreshGroup",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "git-file-groups.createGroup",
        "title": "Create Group",
        "icon": "$(add)"
      },
      {
        "command": "git-file-groups.renameGroup",
        "title": "Rename",
        "icon": "$(pencil)"
      },
      {
        "command": "git-file-groups.renameFile",
        "title": "Rename File",
        "icon": "$(pencil)"
      },
      {
        "command": "git-file-groups.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "git-file-groups.commitGroup",
        "title": "Commit Group",
        "icon": "$(check)"
      },
      {
        "command": "git-file-groups.commitWithMessage",
        "title": "Commit Changes",
        "icon": "$(check)"
      },
      {
        "command": "git-file-groups.openDiff",
        "title": "Open Diff",
        "icon": "$(diff)"
      },
      {
        "command": "git-file-groups.openFile",
        "title": "Open File"
      },
      {
        "command": "git-file-groups.discardChange",
        "title": "Discard Changes",
        "icon": "$(discard)"
      },
      {
        "command": "git-file-groups.toggleExpandCollapse",
        "title": "Expand All",
        "icon": "$(expand-all)",
        "when": "gitFileGroups.isExpanded == false"
      },
      {
        "command": "git-file-groups.collapseAllGroups",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "when": "gitFileGroups.isExpanded == true"
      },
      {
        "command": "git-file-groups.copyRelativePath",
        "title": "Copy Relative Path",
        "icon": "$(copy)"
      },
      {
        "command": "git-file-groups.revealInExplorer",
        "title": "Reveal in Explorer View",
        "icon": "$(list-tree)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-file-groups.refreshGroup",
          "when": "view == gitFileGroupsTreeView",
          "group": "navigation"
        },
        {
          "command": "git-file-groups.toggleExpandCollapse",
          "when": "view == gitFileGroupsTreeView && gitFileGroups.isExpanded == false",
          "group": "navigation"
        },
        {
          "command": "git-file-groups.collapseAllGroups",
          "when": "view == gitFileGroupsTreeView && gitFileGroups.isExpanded == true",
          "group": "navigation"
        },
        {
          "command": "git-file-groups.createGroup",
          "when": "view == gitFileGroupsTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git-file-groups.copyRelativePath",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline@1"
        },
        {
          "command": "git-file-groups.revealInExplorer",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline@2"
        },
        {
          "command": "git-file-groups.discardChange",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline@3"
        },
        {
          "command": "git-file-groups.renameFile",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline@4"
        },
        {
          "command": "git-file-groups.openDiff",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline@5"
        },

        {
          "command": "git-file-groups.renameGroup",
          "when": "view == gitFileGroupsTreeView && viewItem == group && viewItem != ungrouped",
          "group": "inline"
        },
        {
          "command": "git-file-groups.commitGroup",
          "when": "view == gitFileGroupsTreeView && (viewItem != file)",
          "group": "inline"
        },
        {
          "command": "git-file-groups.deleteGroup",
          "when": "view == gitFileGroupsTreeView && viewItem == group && viewItem != ungrouped",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.8",
    "typescript": "^5.0.5"
  }
}
