{
  "name": "git-file-groups",
  "version": "0.2.0",
  "description": "Group source control changed files in VSCode tree view",
  "publisher": "Beej",
  "repository": "https://github.com/beej126/Git-File-Groups",
  "main": "./out/extension.js",
  "npm.packageManager": "pnpm",
  "volta": {
    "node": "24.13.0",
    "pnpm": "10.28.2"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "activationEvents": [
    "onView:gitFileGroupsTreeView",
    "onCommand:git-file-groups.refreshGroup",
    "onCommand:git-file-groups.createGroup",
    "onCommand:git-file-groups.renameGroup",
    "onCommand:git-file-groups.commitGroup",
    "onCommand:git-file-groups.commitWithMessage",
    "onCommand:git-file-groups.openFile",
    "onCommand:git-file-groups.openDiff",
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitFileGroupsTreeView",
          "name": "Git File Groups",
          "icon": "media/icon-view.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "git-file-groups.refreshGroup",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "git-file-groups.createGroup",
        "title": "Create Group",
        "icon": "$(add)"
      },
      {
        "command": "git-file-groups.renameGroup",
        "title": "Rename",
        "icon": "$(pencil)"
      },
      {
        "command": "git-file-groups.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "git-file-groups.commitGroup",
        "title": "Commit Group",
        "icon": "$(check)"
      },
      {
        "command": "git-file-groups.commitWithMessage",
        "title": "Commit Changes",
        "icon": "$(check)"
      },
      {
        "command": "git-file-groups.openDiff",
        "title": "Open Diff"
      },
      {
        "command": "git-file-groups.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "git-file-groups.toggleExpandCollapse",
        "title": "Expand All",
        "icon": "$(expand-all)",
        "when": "gitFileGroups.isExpanded == false"
      },
      {
        "command": "git-file-groups.collapseAllGroups",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "when": "gitFileGroups.isExpanded == true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-file-groups.refreshGroup",
          "when": "view == gitFileGroupsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "git-file-groups.toggleExpandCollapse",
          "when": "view == gitFileGroupsTreeView && gitFileGroups.isExpanded == false",
          "group": "navigation@2"
        },
        {
          "command": "git-file-groups.collapseAllGroups",
          "when": "view == gitFileGroupsTreeView && gitFileGroups.isExpanded == true",
          "group": "navigation@2"
        },
        {
          "command": "git-file-groups.createGroup",
          "when": "view == gitFileGroupsTreeView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "git-file-groups.openFile",
          "when": "view == gitFileGroupsTreeView && viewItem == file",
          "group": "inline"
        },
        {
          "command": "git-file-groups.renameGroup",
          "when": "view == gitFileGroupsTreeView && viewItem == group && viewItem != ungrouped",
          "group": "inline"
        },
        {
          "command": "git-file-groups.commitGroup",
          "when": "view == gitFileGroupsTreeView && (viewItem == group || viewItem == ungrouped)",
          "group": "inline"
        },
        {
          "command": "git-file-groups.deleteGroup",
          "when": "view == gitFileGroupsTreeView && viewItem == group && viewItem != ungrouped",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
