name: Publish VS Code Extension

on:
  workflow_dispatch:

permissions:
  contents: write

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install pnpm
        run: npm install -g pnpm

      - name: Install dependencies
        run: pnpm install

      - name: Bump patch version
        id: bump
        run: |
          node ./scripts/bump-version.js > bump-output.txt
          echo "version=$(sed -n 's/^VERSION=//p' bump-output.txt)" >> $GITHUB_OUTPUT
          echo "name=$(sed -n 's/^NAME=//p' bump-output.txt)" >> $GITHUB_OUTPUT

      - name: Commit version bump and tag
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add package.json package.jsonc || true
          git commit -m "chore(release): v${{ steps.bump.outputs.version }}" || echo "no changes to commit"
          git tag -a v${{ steps.bump.outputs.version }} -m "v${{ steps.bump.outputs.version }}" || echo "tag exists"
          git push origin HEAD:${{ github.ref_name }} || git push origin HEAD
          git push origin --tags || true

      - name: Create GitHub Release
        uses: ncipollo/release-action@v1
        with:
          tag: v${{ steps.bump.outputs.version }}
          name: Release v${{ steps.bump.outputs.version }}
          body: |
            - Changelog: ${{ github.server_url }}/${{ github.repository }}/blob/main/changelog.md
            - Marketplace: https://marketplace.visualstudio.com/items?itemName=Beej.${{ steps.bump.outputs.name }}

      - name: Publish to VS Code Marketplace (via vsce)
        env:
          VSCE_PAT: ${{ secrets.VSCE_PAT }}
        run: pnpm run publish -- --pat $VSCE_PAT
