    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
